{
  "$description": "State collection - Interaction state modes: rest, hover, active, disabled",
  "$extensions": {
    "figma.collection": "State",
    "figma.modes": ["rest", "hover", "active", "disabled"]
  },

  "opacity": {
    "container": {
      "$type": "number",
      "$value": 1,
      "$extensions": { "mode": { "rest": 1, "hover": 1, "active": 1, "disabled": 0.5 } }
    },
    "text": {
      "$type": "number",
      "$value": 1,
      "$extensions": { "mode": { "rest": 1, "hover": 1, "active": 1, "disabled": 0.5 } }
    },
    "icon": {
      "$type": "number",
      "$value": 1,
      "$extensions": { "mode": { "rest": 1, "hover": 1, "active": 1, "disabled": 0.4 } }
    },
    "border": {
      "$type": "number",
      "$value": 1,
      "$extensions": { "mode": { "rest": 1, "hover": 1, "active": 1, "disabled": 0.3 } }
    }
  },

  "transform": {
    "scale": {
      "$type": "number",
      "$value": 1,
      "$extensions": { "mode": { "rest": 1, "hover": 1.02, "active": 0.98, "disabled": 1 } }
    },
    "translateY": {
      "$type": "dimension",
      "$value": "0px",
      "$extensions": { "mode": { "rest": "0px", "hover": "-1px", "active": "0px", "disabled": "0px" } }
    }
  },

  "cursor": {
    "type": {
      "$type": "string",
      "$value": "pointer",
      "$extensions": { "mode": { "rest": "pointer", "hover": "pointer", "active": "pointer", "disabled": "not-allowed" } }
    }
  },

  "pointer-events": {
    "value": {
      "$type": "string",
      "$value": "auto",
      "$extensions": { "mode": { "rest": "auto", "hover": "auto", "active": "auto", "disabled": "none" } }
    }
  },

  "user-select": {
    "value": {
      "$type": "string",
      "$value": "auto",
      "$extensions": { "mode": { "rest": "auto", "hover": "auto", "active": "none", "disabled": "none" } }
    }
  },

  "overlay": {
    "opacity": {
      "$type": "number",
      "$value": 0,
      "$extensions": { "mode": { "rest": 0, "hover": 0.08, "active": 0.12, "disabled": 0 } }
    },
    "color": {
      "$type": "color",
      "$value": "rgba(0, 0, 0, 0)",
      "$extensions": {
        "mode": {
          "rest": "rgba(0, 0, 0, 0)",
          "hover": "rgba(0, 0, 0, 0.08)",
          "active": "rgba(0, 0, 0, 0.12)",
          "disabled": "rgba(0, 0, 0, 0)"
        }
      }
    }
  },

  "primary-button": {
    "background": {
      "$type": "color",
      "$value": "#2563eb",
      "$extensions": {
        "mode": {
          "rest": "#2563eb",
          "hover": "#1d4ed8",
          "active": "#1e40af",
          "disabled": "#93c5fd"
        }
      }
    },
    "text": {
      "$type": "color",
      "$value": "#ffffff",
      "$extensions": {
        "mode": {
          "rest": "#ffffff",
          "hover": "#ffffff",
          "active": "#ffffff",
          "disabled": "#ffffff"
        }
      }
    },
    "border": {
      "$type": "color",
      "$value": "#2563eb",
      "$extensions": {
        "mode": {
          "rest": "#2563eb",
          "hover": "#1d4ed8",
          "active": "#1e40af",
          "disabled": "#93c5fd"
        }
      }
    },
    "shadow": {
      "$type": "string",
      "$value": "sm",
      "$extensions": { "mode": { "rest": "sm", "hover": "md", "active": "none", "disabled": "none" } }
    }
  },

  "secondary-button": {
    "background": {
      "$type": "color",
      "$value": "transparent",
      "$extensions": {
        "mode": {
          "rest": "transparent",
          "hover": "#f1f5f9",
          "active": "#e2e8f0",
          "disabled": "transparent"
        }
      }
    },
    "text": {
      "$type": "color",
      "$value": "#1e293b",
      "$extensions": {
        "mode": {
          "rest": "#1e293b",
          "hover": "#0f172a",
          "active": "#0f172a",
          "disabled": "#94a3b8"
        }
      }
    },
    "border": {
      "$type": "color",
      "$value": "#cbd5e1",
      "$extensions": {
        "mode": {
          "rest": "#cbd5e1",
          "hover": "#94a3b8",
          "active": "#64748b",
          "disabled": "#e2e8f0"
        }
      }
    }
  },

  "ghost-button": {
