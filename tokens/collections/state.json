    "text": {
      "$type": "color",
      "$value": "#1e293b",
      "$extensions": {
        "mode": {
          "rest": "#1e293b",
          "hover": "#0f172a",
          "active": "#0f172a",
          "disabled": "#94a3b8"
        }
      }
