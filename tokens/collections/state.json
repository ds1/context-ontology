          "hover": "rgba(0, 0, 0, 0.04)",
          "active": "rgba(37, 99, 235, 0.1)",
          "disabled": "transparent"
        }
      }
    },
    "text": {
      "$type": "color",
      "$value": "#475569",
      "$extensions": {
        "mode": {
          "rest": "#475569",
          "hover": "#1e293b",
          "active": "#2563eb",
